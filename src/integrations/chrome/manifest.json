{
  "version": "0.2.0",
  "name": "Relay DevTools",
  "short_name": "Relay DevTools",
  "description": "Relay DevTools. Developer Tools extension to inspect Relay store and how it changes.",
  "icons": {
    "16": "imgs/logo.png",
    "48": "imgs/logo.png",
    "128": "imgs/logo.png"
  },

  "page_action": {},
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "devtools_page": "devtools.html",
  "manifest_version": 2
}
